{
  "extends": "solhint:recommended",
  "rules": {
    "compiler-version": ["error", "0.8.4"],
    "func-visibility": ["warn", { "ignoreConstructors": true }],
    "indent": ["warning", 2],
    "mark-callable-contracts": [false],
    "func-name-mixedcase": [false],
    "bracket-align": [false],
    "var-name-mixedcase": [false]
  }
}
